<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Tags</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .tag-container {
            margin-bottom: 10px;
        }

        .toggle {
            cursor: pointer;
        }

        .modal {
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 3px solid #000000;
            width: 40%;
            max-height: 80vh;
            overflow: hidden;
        }

        .modal-body {
            max-height: calc(100vh - 250px);
            overflow-y: auto;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 35px;
            font-weight: bold;
        }

        .close:hover {
            color: black;
            cursor: pointer;
        }

        .modal-header {
            position: sticky;
            top: 0;
            background-color: #fefefe;
            z-index: 100;
            padding-bottom: 10px;
        }

        ul {
            list-style-type: none;
            /*
            padding-left: 0; Remove default indentation 
            */
        }
    </style>
</head>
<body>
    <!-- <%- include("partials/nav.ejs") %> -->

    <h1>Manage Tags</h1>

    <button id="manageTagsBtn">Manage Tags</button>

    <!-- Modal window -->
    <div id="manageTagsModal" class="modal">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h2 style="flex-grow: 1;">Manage Tags for file_name</h2>
                <span class="close" style="cursor: pointer;">&times;</span> <!-- Close (X) button -->
            </div>

            <br>

            <!-- Search field and buttons (part of the header) -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <form class="d-flex flex-grow-1 me-2" role="search">
                    <input class="form-control me-2 p-2" type="search" placeholder="Search tags" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit" onclick="event.preventDefault();">Search</button>
                </form>

                <div class="d-flex">
                    <button class="btn btn-outline-secondary rounded-circle me-2" id="refreshBtn">
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>

                    <!-- Tag Edit button -->
                    <button class="btn btn-outline-primary rounded-circle" id="addTagBtn">
                        <i class="bi bi-plus"></i>
                    </button>
                </div>
            </div>

            <hr>

            <!-- Modal body -->
            <div class="modal-body">
                <ul>

                    <% tags.forEach(tag => { %>

                    <li class="tag-container">
                        <input type="checkbox" id="tag-<%= tag.tag_id %>">
                        <!-- Checkbox for the main tag -->
                        <span class="toggle"><i class="bi bi-caret-down"></i>
                            <%= tag.tag_name %>
                        </span>
                    </li>
                    <% }) %>
                </ul>
            </div>

            <button id="saveChangesBtn">Save Changes</button>
        </div>
    </div>

    <script>
        var modal = document.getElementById("manageTagsModal");
        var openModalBtn = document.getElementById("manageTagsBtn");

        // Open the modal
        // This will open from a right click on a file, not a designated button
        openModalBtn.onclick = function () {
            modal.style.display = "block";
        }

        // Close modal on X click
        document.getElementsByClassName("close")[0].onclick = function () {
            modal.style.display = "none";
        }

        // Close modal on outside click
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        document.getElementById("saveChangesBtn").onclick = function () {
            // modal.style.display = "none";
            alert("Changes confirmed");
        }

        document.getElementById("addTagBtn").onclick = function () {
            window.location.href = "./tag-editor";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>