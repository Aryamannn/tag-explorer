<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="row">
        <div class="col-12">
            <header class="p-3" style="background-color: #f8f9fa;">
                <h1 class="text-left">Tag Explorer</h1>
            </header>
        </div>
    </div>


  
    <div class="row">
        <!-- Sidebar -->
        <div class="col-3 sidebar p-3" style="max-height: 95vh; overflow-y: auto;">
          <!-- Search -->
          <form class="d-flex mb-3" role="search">
            <input class="form-control me-2" type="search" id="searchInput" placeholder="Search" aria-label="Search" oninput="filterTags()">
            <!-- <button class="btn btn-outline-success" type="submit">Search</button> -->
          </form>

      
            <button class="dropdown-btn">
                <span>Favorites</span>
                <span>&#9662;</span> <!-- Down arrow symbol -->
            </button>
            <div class="dropdown-content">
                <% tags.forEach(tag => { %>
                    <button class="dropdown-btn">
                        <span><%= tag.tag_name || 'Untitled Tag' %></span>
                        <span>&#9662;</span> <!-- Down arrow symbol -->
                    </button>
                    <div class="dropdown-content">
                        <% const filteredValues = tagValues.filter(value => value.tag_id === tag.tag_id); %>
                        <% if (filteredValues && filteredValues.length > 0) { %>
                            <% filteredValues.forEach(value => { %>
                                <a href="#subitem1"><%= value.tag_value %></a>
                            <% }); %>
                        <% } else { %>
                            <a href="#subitem2">No values</a>
                        <% } %>
                    </div>
                <% }); %>
            </div>
       <br>
       <hr>
       <br>


          <!-- Dropdown List Section -->
       
            <% tags.forEach(tag => { %>
              <button class="dropdown-btn">
                <span><%= tag.tag_name || 'Untitled Tag' %></span>
                <span>&#9662;</span> <!-- Down arrow symbol -->
              </button>
              <div class="dropdown-content">
                <% const filteredValues = tagValues.filter(value => value.tag_id === tag.tag_id); %>
                <% if (filteredValues && filteredValues.length > 0) { %>
                  <% filteredValues.forEach(value => { %>
                    <a href="#subitem1"><%= value.tag_value %></a>
                  <% }); %>
                <% } else { %>
                  <a href="#subitem2">No values</a>
                <% } %>
              </div>
            <% }); %>
     
        </div>

      

      <!-- Main Content Area -->
      <div class="col-9 p-3">
        <!-- <div class="filter-tags mb-3" id="filterTagsArea">
      </div> -->

      <div class="filter-tags" id="dropzone">
        <div id ="tag-container" class="tag-container">
          <span class="tag-badge">
            <%= defaultTags[0].tag_name %>: *  
            <i class="fas fa-thumbtack pin-icon"></i>  <!-- Pin icon -->
          </span>
      </div>
      <!-- <div id="tag-container" class="tag-container">
        <% defaultTags.forEach(tag => { %>
            <span class="tag-badge">
                <%= tag.tag_name %>: <%= tag.tag_value %>
            </span>
        <% }); %>
    </div> -->
      </div>
      
        <!-- File List -->
        <div class="file-list">
          <div class="file-list-header row">
            <div class="col-4">File Name</div>
            <div class="col-3">Date Modified</div>
            <div class="col-3">Type</div>
            <div class="col-2">Size</div>
          </div>
          <div class="file-item row">
            <div class="col-4">File1.pdf</div>
            <div class="col-3">10/2/2024</div>
            <div class="col-3">PDF File</div>
            <div class="col-2">45 KB</div>
          </div>
          <div class="file-item row active">
            <div class="col-4">File2.txt</div>
            <div class="col-3">10/1/2024</div>
            <div class="col-3">Text Document</div>
            <div class="col-2">2 KB</div>
          </div>
          <div class="file-item row">
            <div class="col-4">File3.xlsx</div>
            <div class="col-3">9/29/2024</div>
            <div class="col-3">Microsoft Excel Workbook</div>
            <div class="col-2">10 KB</div>
          </div>
          <div class="file-item row">
            <div class="col-4">File4.exe</div>
            <div class="col-3">8/12/2024</div>
            <div class="col-3">Application</div>
            <div class="col-2">691 KB</div>
          </div>
        </div>

        <!-- Buttons (Settings and Actions) -->
        <div class="d-flex justify-content-end mt-3">
          <button class="btn btn-secondary me-2">
            <i class="bi bi-x"></i>
          </button>
          <button class="btn btn-secondary me-2">
            <i class="bi bi-plus"></i>
          </button>
          <button class="btn btn-secondary">
            <i class="bi bi-gear"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
