<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="row">
        <div class="col-12">
            <header class="p-3" style="background-color: #f8f9fa;">
                <h1 class="text-left">Tag Explorer</h1>
            </header>
            <button 
            type="button" 
            class="px-4 py-2 bg-blue-600 text-black rounded hover:bg-blue-700 transition-colors" 
            id="navigateButton" 
            onclick="window.location.href='http://localhost:3000/tag-editor';">
            Go to Tag Editor
          </button>
        </div>
      </div>

    <div class="row">
        <!-- Sidebar -->
        <div class="col-3 sidebar p-3" style="max-height: 94vh; overflow-y: auto;">
          <!-- Search -->
          <form class="d-flex mb-3" role="search">
            <input class="form-control me-2" type="search" id="searchInput" placeholder="Search" aria-label="Search" oninput="filterTags()">
            <button 
              type="button" 
              class="btn btn-outline-danger d-flex align-items-center justify-content-center rounded-circle" 
              id="clearRecentsIcon" 
              onclick="clearRecentTags()"
              style="width: 40px; height: 40px;" 
              aria-label="More options">
              <i class="bi bi-three-dots"></i>
            </button>
          </form>
          
          <!-- Dropdown for favorite tags -->
          <button class="dropdown-btn">
            <span>Favorites</span>
            <span>&#9662;</span>
          </button>
          <div class="dropdown-content" id="favoriteTagsDropdown"></div>
          <br>
        
          <button class="dropdown-btn">
            <span>Recent</span>
            <span>&#9662;</span>
          </button>
          <div class="dropdown-content" id="recentTagsDropdown"></div>

          <hr>
          <br>
   
          <!-- Dropdown List Section -->
          <% if (tags && tags.length > 0) { %>
            <% tags.forEach(tag => { %>
              <button class="dropdown-btn draggable" draggable="true" data-tag-name="<%= tag.tag_name %>" data-tag-id="<%= tag.tag_id %>">
                <span><%= tag.tag_name || 'Untitled Tag' %></span>
                <span>&#9662;</span>
              </button>
            
              <div class="dropdown-content">
                <a onclick="addTagOnClick('tag', '<%=tag.tag_id%>', '<%=tag.tag_name%>', '<%=tag.tag_name%>')" 
                   class="draggable" 
                   href="#subitem1" 
                   draggable="true" 
                   data-tag-name="<%= tag.tag_name %>" 
                   data-tag-id="<%=tag.tag_id%>" 
                   any-tag="True">Any</a>
            
                <% const filteredValues = tagValues.filter(value => value.tag_id === tag.tag_id); %>
                <% if (filteredValues && filteredValues.length > 0) { %>
                  <% filteredValues.forEach(value => { %>
                    <div class="dropdown-item-wrapper">
                      <a onclick="addTagOnClick('subtag', '<%= value.value_id %>', '<%= tag.tag_name %>', '<%= value.tag_value %>')" 
                         class="draggable" 
                         href="#subitem1" 
                         draggable="true" 
                         data-tag-name="<%= tag.tag_name %>" 
                         data-tag-value="<%= value.tag_value %>" 
                         data-tag-id="<%= tag.tag_id %>" 
                         data-subtag-id="<%= value.value_id %>">
                        <%= value.tag_value %>
                      </a>
                      <i class="bi bi-star favorite-btn" 
                         id="star-<%= value.value_id %>"
                         onclick="toggleFavoriteTag('subtag', '<%= value.value_id %>', '<%= tag.tag_name %>', '<%= value.tag_value %>')"></i>
                    </div>
                  <% }); %>
                <% } else { %> 
                  <div class="dropdown-item-wrapper">
                    <a href="#subitem2">No values</a>
                    <i class="bi bi-star favorite-btn" id="star-<%= tag.tag_id %>"></i>
                  </div>
                <% } %>
              </div>
            <% }); %>
          <% } else { %>
            <p>No tags available</p>
          <% } %>
        </div>
   
        <!-- Main Content Area -->
        <div class="col-9 p-3">
          <div class="filter-tags-and-icons d-flex align-items-center">
            <div class="filter-tags" id="dropzone">
              <div id="tag-container" class="tag-container">
                <% if (defaultTags && defaultTags.length > 0) { %>
                  <span class="tag-badge">
                    <%= defaultTags[0].tag_name %>: *  
                    <i class="fas fa-thumbtack pin-icon"></i>
                  </span>
                <% } %>
              </div>
            </div>
          
            <div class="icon-buttons" style="margin-left: 10px;">
              <a href="#" onclick="clearTags()">
                <img src="/images/x_symbol.png" alt="X symbol" />
              </a>
              <a href="#">
                <img src="/images/plus_symbol.png" alt="Plus symbol" />
              </a>
              <a href="/manage-tags">
                <img src="/images/gear_symbol.png" alt="Gear symbol" />
              </a>
            </div>
          </div>

          <!-- File List -->
          <div class="file-list" id="results">
            <div class="file-list-header row">
              <div class="col-4">File Name</div>
              <div class="col-3">Date Modified</div>
              <div class="col-3">Type</div>
              <div class="col-2">Size</div>
            </div>

            <% if (files && files.length > 0) { %>
              <% files.forEach(file => { %>
                <div class="file-item row">
                  <div class="col-4">
                    <a href="open/<%= file.file_path.split('/').pop() %>">
                      <%= file.file_path.split('/').pop() %>
                    </a>
                  </div>
                  <div class="col-3">
                    <%= file.metadata && file.metadata.modifiedDate ? 
                        helpers.formatDate(file.metadata.modifiedDate) : 'N/A' %>
                  </div>
                  <div class="col-3">
                    <%= file.metadata ? file.metadata.fileType : 'Unknown' %>
                  </div>
                  <div class="col-2">
                    <%= helpers.formatSize(file.metadata ? file.metadata.size : 0) %>
                  </div>
                  <% if (file.metadata && file.metadata.error) { %>
                    <div class="col-12 text-danger">
                      <small>Error: <%= file.metadata.error %></small>
                    </div>
                  <% } %>
                </div>
              <% }); %>
            <% } else { %>
              <div class="row">
                <div class="col-12 text-center p-3">
                  <p>No files found</p>
                </div>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Context Menu -->
        <div id="contextMenu" class="menu">
          <p id="manageTags">Manage Tags</p>
        </div>

        <!-- Modal window -->
        <div id="manageTagsModal" class="modal" tabindex="-1" aria-labelledby="manageTagsModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <!-- Header -->
              <div class="modal-header">
                <span class="close" style="cursor: pointer;" title="Close the window. Changes won't be saved.">&times;</span>
              </div>

              <br>

              <!-- Search field and Tag Edit (+) button -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <form class="d-flex flex-grow-1 me-2" role="search">
                  <input class="form-control me-2 p-2" 
                         type="search" 
                         id="searchInputInModal" 
                         placeholder="Search" 
                         aria-label="Search" 
                         oninput="filterTagsInWindow()"
                         title="Quickly search for tags.">
                </form>
                <div class="d-flex">
                  <button class="btn btn-outline-primary rounded-circle" 
                          id="addTagBtn" 
                          title="Go to Tag Editor to create new tags. Changes won't be saved.">
                    <a href="/tag-editor">
                      <i class="bi bi-plus fs-5"></i>
                    </a>
                  </button>
                </div>
              </div>

              <!-- Tags Area -->
              <div class="filter-tags" id="modal-dropzone" title="Tags applied to the file are shown here.">
                <div id="modal-tag-container" class="modal-tag-container" style="display: inline-flex;">
                  <span class="tag-badge">
                    tags  
                    <i class="fas fa-thumbtack pin-icon"></i>
                  </span>
                </div>
              </div>
          
              <!-- Tag List -->
              <div style="max-height: 30vh; overflow-y: auto;" title="These dropdowns contain all existing tags.">
                <% if (tags && tags.length > 0) { %>
                  <% tags.forEach(tag => { %>
                    <button class="modal-dropdown-btn">
                      <span><%= tag.tag_name || 'Untitled Tag' %></span>
                      <span>&#9662;</span>
                    </button>
                    <div class="modal-dropdown-content">
                      <% const values = tagValues.filter(value => value.tag_id === tag.tag_id); %>
                      <% if (values && values.length > 0) { %>
                        <% values.forEach(value => { %>
                          <a href="#subitem1"><%= value.tag_value %></a>
                        <% }); %>
                      <% } else { %>
                        <a href="#subitem2">No values</a>
                      <% } %>
                    </div>
                  <% }); %>
                <% } else { %>
                  <p>No tags available</p>
                <% } %>
              </div>

              <br>
 
              <button id="saveChangesBtn" 
                      class="btn btn-success" 
                      title="Save changes you have made." 
                      onclick="handleSaveChanges()">
                Save Changes
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="small-window">
      <h5 id="count">result: </h5>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
  <script src="/js/tagExplorerScript.js"></script>

</body>
</html>